#!/bin/bash

S_LIB_FOLDER=${S_LIB_FOLDER:-/usr/lib/ws-session}
source $S_LIB_FOLDER/lib/source.sh
s_source_lib wm

if [[ -n $S_WM ]] ; then
  s_source app/vim.sh
  s_vim_start "$@"
  disown -a
else
  echo 'ignore all errors and start vim on a terminal'
  /usr/bin/vim $@
fi

# vim: ft=sh ts=2 et sw=2:
